<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Airports.SplashPage"
             Title="SplashPage"
             BackgroundColor="#283593">

	<Grid VerticalOptions="Center" HorizontalOptions="Center">
		<StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
			<ActivityIndicator IsRunning="True" Color="#FFEB3B" WidthRequest="50" HeightRequest="50"/>
			<Label Text="Loading Storm Data, Please Wait" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   FontSize="20" 
                   TextColor="#FFFFFF" 
                   FontAttributes="Bold" />
		</StackLayout>
	</Grid>

</ContentPage>
